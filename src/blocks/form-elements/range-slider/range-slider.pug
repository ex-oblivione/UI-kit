.range-slider
  .range-slider__text
    span.range-slider__title.text-style-litle ДИАПАЗОН ЦЕНЫ
    .range-slider__text-price
      span.range-slider__text-left
      span.range-slider__text-right
  .multi-range-slider
    input.range-slider__input(
      type='range'
      id='range-slider__input-left'
      min='0'
      max='75'
      value='25'
      step='1'
    )
    input.range-slider__input(
      type='range'
      id='range-slider__input-right'
      min='0'
      max='75'
      value='50'
      step='1'
    )
    .range-slider__stylized
      .range-slider__track
      .range-slider__range
      .range-slider__thumb.thumb-left
      .range-slider__thumb.thumb-right